<Page x:Class="ShelterApp.Pages.AnimalDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Детали животного">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0"
                    Content="← Назад"
                    Style="{StaticResource ButtonStyle}"
                    HorizontalAlignment="Left"
                    Click="Back_Click"
                    Margin="0,0,0,20"/>

            <Border Grid.Row="1"
                    Background="White"
                    CornerRadius="10"
                    Padding="30">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock x:Name="AnimalNameTextBlock"
                                   Text="Имя животного"
                                   Style="{StaticResource TitleStyle}"/>

                        <TextBlock Text="Информация"
                                   FontFamily="Segoe UI"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Margin="0,20,0,10"/>

                        <StackPanel Margin="0,5">
                            <TextBlock Text="Вид:" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock x:Name="TypeTextBlock" Text="-" FontSize="14" Margin="0,2,0,10"/>
                        </StackPanel>

                        <StackPanel Margin="0,5">
                            <TextBlock Text="Порода:" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock x:Name="BreedTextBlock" Text="-" FontSize="14" Margin="0,2,0,10"/>
                        </StackPanel>

                        <StackPanel Margin="0,5">
                            <TextBlock Text="Возраст:" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock x:Name="AgeTextBlock" Text="-" FontSize="14" Margin="0,2,0,10"/>
                        </StackPanel>

                        <StackPanel Margin="0,5">
                            <TextBlock Text="Пол:" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock x:Name="GenderTextBlock" Text="-" FontSize="14" Margin="0,2,0,10"/>
                        </StackPanel>

                        <StackPanel Margin="0,5">
                            <TextBlock Text="Размер:" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock x:Name="SizeTextBlock" Text="-" FontSize="14" Margin="0,2,0,10"/>
                        </StackPanel>

                        <StackPanel Margin="0,5">
                            <TextBlock Text="Темперамент:" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock x:Name="TemperamentTextBlock" Text="-" FontSize="14" TextWrapping="Wrap" Margin="0,2,0,10"/>
                        </StackPanel>

                        <StackPanel Margin="0,5">
                            <TextBlock Text="Статус:" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock x:Name="StatusTextBlock" Text="-" FontSize="14" Margin="0,2,0,10"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Подать заявку на опекунство"
                                   FontFamily="Segoe UI"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,20"/>

                        <TextBlock Text="Имя:" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="NameTextBox" Style="{StaticResource TextBoxStyle}"/>

                        <TextBlock Text="Телефон:" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="PhoneTextBox" Style="{StaticResource TextBoxStyle}"/>

                        <TextBlock Text="Email:" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="EmailTextBox" Style="{StaticResource TextBoxStyle}"/>

                        <Button Content="Подать заявку"
                                Style="{StaticResource ButtonStyle}"
                                Margin="5,20,5,5"
                                Padding="20,10"
                                Click="SubmitApplication_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
