<Page x:Class="ShelterApp.Pages.CatalogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Каталог">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Каталог животных"
                   Style="{StaticResource TitleStyle}"/>

        <Border Grid.Row="1"
                Background="White"
                CornerRadius="5"
                Padding="15"
                Margin="0,10,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Тип:"
                           Style="{StaticResource LabelStyle}"
                           VerticalAlignment="Center"/>
                <ComboBox x:Name="TypeComboBox"
                          Width="150"
                          Margin="5"
                          SelectionChanged="Filter_Changed">
                    <ComboBoxItem Content="Все" IsSelected="True"/>
                    <ComboBoxItem Content="Собака"/>
                    <ComboBoxItem Content="Кошка"/>
                </ComboBox>

                <TextBlock Text="Пол:"
                           Style="{StaticResource LabelStyle}"
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>
                <ComboBox x:Name="GenderComboBox"
                          Width="150"
                          Margin="5"
                          SelectionChanged="Filter_Changed">
                    <ComboBoxItem Content="Все" IsSelected="True"/>
                    <ComboBoxItem Content="Самец"/>
                    <ComboBoxItem Content="Самка"/>
                </ComboBox>

                <TextBlock Text="Размер:"
                           Style="{StaticResource LabelStyle}"
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>
                <ComboBox x:Name="SizeComboBox"
                          Width="150"
                          Margin="5"
                          SelectionChanged="Filter_Changed">
                    <ComboBoxItem Content="Все" IsSelected="True"/>
                    <ComboBoxItem Content="Маленький"/>
                    <ComboBoxItem Content="Средний"/>
                    <ComboBoxItem Content="Крупный"/>
                </ComboBox>

                <Button Content="Сбросить"
                        Style="{StaticResource ButtonStyle}"
                        Click="ResetFilter_Click"
                        Margin="20,0,0,0"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="AnimalsItemsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White"
                                CornerRadius="10"
                                Margin="10"
                                Padding="15"
                                Width="250"
                                Height="320"
                                Cursor="Hand"
                                MouseLeftButtonUp="AnimalCard_Click">
                            <Border.Effect>
                                <DropShadowEffect Color="Gray"
                                                BlurRadius="10"
                                                Opacity="0.3"
                                                ShadowDepth="2"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="{Binding Name}"
                                           FontFamily="Segoe UI"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextColor}"
                                           Margin="0,0,0,10"/>

                                <TextBlock FontFamily="Segoe UI" FontSize="13" Margin="0,3">
                                    <Run Text="Вид: " FontWeight="SemiBold"/>
                                    <Run Text="{Binding Type}"/>
                                </TextBlock>

                                <TextBlock FontFamily="Segoe UI" FontSize="13" Margin="0,3">
                                    <Run Text="Порода: " FontWeight="SemiBold"/>
                                    <Run Text="{Binding Breed}"/>
                                </TextBlock>

                                <TextBlock FontFamily="Segoe UI" FontSize="13" Margin="0,3">
                                    <Run Text="Возраст: " FontWeight="SemiBold"/>
                                    <Run Text="{Binding Age}"/>
                                    <Run Text=" лет"/>
                                </TextBlock>

                                <TextBlock FontFamily="Segoe UI" FontSize="13" Margin="0,3">
                                    <Run Text="Пол: " FontWeight="SemiBold"/>
                                    <Run Text="{Binding Gender}"/>
                                </TextBlock>

                                <TextBlock FontFamily="Segoe UI" FontSize="13" Margin="0,3">
                                    <Run Text="Размер: " FontWeight="SemiBold"/>
                                    <Run Text="{Binding Size}"/>
                                </TextBlock>

                                <TextBlock FontFamily="Segoe UI" FontSize="13" Margin="0,3">
                                    <Run Text="Статус: " FontWeight="SemiBold"/>
                                    <Run Text="{Binding CurrentStatus}"/>
                                </TextBlock>

                                <Button Content="Подробнее"
                                        Style="{StaticResource ButtonStyle}"
                                        Margin="0,15,0,0"
                                        Click="Details_Click"
                                        Tag="{Binding Id}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
