<Window x:Class="ShelterApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Приют для животных" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource Beige}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource PrimaryGreen}" Padding="20,0">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Приют для животных"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Content="Каталог"
                            Style="{StaticResource RoundedButton}"
                            Background="Transparent"
                            Margin="5,0"
                            Click="CatalogButton_Click"/>
                    <Button Content="Избранное"
                            Style="{StaticResource RoundedButton}"
                            Background="Transparent"
                            Margin="5,0"
                            Click="FavoritesButton_Click"/>
                    <Button Content="Личный кабинет"
                            Style="{StaticResource RoundedButton}"
                            Background="Transparent"
                            Margin="5,0"
                            Click="ProfileButton_Click"/>
                    <Button x:Name="AdminButton"
                            Content="Админ"
                            Style="{StaticResource RoundedButton}"
                            Background="Transparent"
                            Margin="5,0"
                            Visibility="Collapsed"
                            Click="AdminButton_Click"/>
                    <Button Content="Выход"
                            Style="{StaticResource RoundedButton}"
                            Background="Transparent"
                            Margin="5,0"
                            Click="LogoutButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Frame x:Name="MainFrame"
               Grid.Row="1"
               NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
