<Page x:Class="ShelterApp.Views.Pages.AnimalDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource Beige}">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,30,0">
                <Border Height="400"
                        Background="{StaticResource DarkBeige}"
                        CornerRadius="15"
                        Margin="0,0,0,20">
                    <TextBlock Text="Фото 1"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource TextDark}"
                               FontSize="20"/>
                </Border>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border Height="120" Width="120"
                            Background="{StaticResource DarkBeige}"
                            CornerRadius="10"
                            Margin="5">
                        <TextBlock Text="Фото 2"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource TextDark}"/>
                    </Border>
                    <Border Height="120" Width="120"
                            Background="{StaticResource DarkBeige}"
                            CornerRadius="10"
                            Margin="5">
                        <TextBlock Text="Фото 3"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource TextDark}"/>
                    </Border>
                </StackPanel>

                <Button Content="Добавить в избранное"
                        Style="{StaticResource RoundedButton}"
                        Margin="0,30,0,0"
                        Height="45"
                        Click="AddToFavorites_Click"/>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <TextBlock x:Name="AnimalNameTextBlock"
                           Style="{StaticResource PageTitle}"/>

                <Border Background="{StaticResource LightGreen}"
                        CornerRadius="10"
                        Padding="12,8"
                        Margin="0,10,0,20"
                        HorizontalAlignment="Left">
                    <TextBlock x:Name="StatusTextBlock"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="Medium"/>
                </Border>

                <Border Style="{StaticResource CardBorder}">
                    <StackPanel>
                        <TextBlock Text="Характеристики"
                                   Style="{StaticResource SectionTitle}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Вид:" Grid.Row="0" Grid.Column="0" Margin="0,5"/>
                            <TextBlock x:Name="TypeTextBlock" Grid.Row="0" Grid.Column="1" Margin="0,5" FontWeight="Medium"/>

                            <TextBlock Text="Порода:" Grid.Row="1" Grid.Column="0" Margin="0,5"/>
                            <TextBlock x:Name="BreedTextBlock" Grid.Row="1" Grid.Column="1" Margin="0,5"/>

                            <TextBlock Text="Возраст:" Grid.Row="2" Grid.Column="0" Margin="0,5"/>
                            <TextBlock x:Name="AgeTextBlock" Grid.Row="2" Grid.Column="1" Margin="0,5"/>

                            <TextBlock Text="Пол:" Grid.Row="3" Grid.Column="0" Margin="0,5"/>
                            <TextBlock x:Name="GenderTextBlock" Grid.Row="3" Grid.Column="1" Margin="0,5"/>

                            <TextBlock Text="Размер:" Grid.Row="4" Grid.Column="0" Margin="0,5"/>
                            <TextBlock x:Name="SizeTextBlock" Grid.Row="4" Grid.Column="1" Margin="0,5"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource CardBorder}">
                    <StackPanel>
                        <TextBlock Text="Характер"
                                   Style="{StaticResource SectionTitle}"/>
                        <TextBlock x:Name="TemperamentTextBlock"
                                   TextWrapping="Wrap"
                                   Foreground="{StaticResource TextDark}"
                                   LineHeight="22"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource CardBorder}">
                    <StackPanel>
                        <TextBlock Text="Подать заявку на опекунство"
                                   Style="{StaticResource SectionTitle}"/>

                        <TextBlock Text="ФИО:"
                                   Margin="0,10,0,5"/>
                        <TextBox x:Name="NameTextBox"
                                 Style="{StaticResource RoundedTextBox}"
                                 Height="40"/>

                        <TextBlock Text="Телефон:"
                                   Margin="0,10,0,5"/>
                        <TextBox x:Name="PhoneTextBox"
                                 Style="{StaticResource RoundedTextBox}"
                                 Height="40"/>

                        <TextBlock Text="Email:"
                                   Margin="0,10,0,5"/>
                        <TextBox x:Name="EmailTextBox"
                                 Style="{StaticResource RoundedTextBox}"
                                 Height="40"/>

                        <Button Content="Подать заявку"
                                Style="{StaticResource RoundedButton}"
                                Margin="0,20,0,0"
                                Height="45"
                                Click="SubmitApplication_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
