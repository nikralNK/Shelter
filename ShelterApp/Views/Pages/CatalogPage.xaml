<Page x:Class="ShelterApp.Views.Pages.CatalogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource Beige}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Каталог животных"
                   Style="{StaticResource PageTitle}"
                   Grid.Row="0"/>

        <Border Grid.Row="1"
                Style="{StaticResource CardBorder}"
                Padding="20">
            <StackPanel>
                <TextBlock Text="Фильтры"
                           Style="{StaticResource SectionTitle}"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Вид:" Margin="0,0,0,5"/>
                        <ComboBox x:Name="TypeComboBox"
                                  Height="35"
                                  Padding="10,5">
                            <ComboBoxItem Content="Все" IsSelected="True"/>
                            <ComboBoxItem Content="Собака"/>
                            <ComboBoxItem Content="Кошка"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,0,10,0">
                        <TextBlock Text="Пол:" Margin="0,0,0,5"/>
                        <ComboBox x:Name="GenderComboBox"
                                  Height="35"
                                  Padding="10,5">
                            <ComboBoxItem Content="Все" IsSelected="True"/>
                            <ComboBoxItem Content="Самец"/>
                            <ComboBoxItem Content="Самка"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="0,0,10,0">
                        <TextBlock Text="Размер:" Margin="0,0,0,5"/>
                        <ComboBox x:Name="SizeComboBox"
                                  Height="35"
                                  Padding="10,5">
                            <ComboBoxItem Content="Все" IsSelected="True"/>
                            <ComboBoxItem Content="Крупный"/>
                            <ComboBoxItem Content="Средний"/>
                            <ComboBoxItem Content="Маленький"/>
                        </ComboBox>
                    </StackPanel>

                    <Button Grid.Column="3"
                            Content="Применить"
                            Style="{StaticResource RoundedButton}"
                            VerticalAlignment="Bottom"
                            Padding="25,10"
                            Click="ApplyFilterButton_Click"/>
                </Grid>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="2"
                      Margin="0,20,0,0"
                      VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="AnimalsItemsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardBorder}"
                                Width="280"
                                Height="380"
                                Cursor="Hand"
                                MouseLeftButtonDown="AnimalCard_Click">
                            <StackPanel>
                                <Border Height="200"
                                        Background="{StaticResource DarkBeige}"
                                        CornerRadius="10"
                                        Margin="0,0,0,10">
                                    <TextBlock Text="Фото"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="{StaticResource TextDark}"
                                               FontSize="16"/>
                                </Border>

                                <TextBlock Text="{Binding Name}"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextDark}"
                                           Margin="0,0,0,5"/>

                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="Вид: " Foreground="{StaticResource TextDark}"/>
                                    <TextBlock Text="{Binding Type}" Foreground="{StaticResource TextDark}" FontWeight="Medium"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                    <TextBlock Text="Порода: " Foreground="{StaticResource TextDark}"/>
                                    <TextBlock Text="{Binding Breed}" Foreground="{StaticResource TextDark}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                    <TextBlock Text="Возраст: " Foreground="{StaticResource TextDark}"/>
                                    <TextBlock Text="{Binding Age}" Foreground="{StaticResource TextDark}"/>
                                    <TextBlock Text=" лет" Foreground="{StaticResource TextDark}"/>
                                </StackPanel>

                                <Border Background="{StaticResource LightGreen}"
                                        CornerRadius="10"
                                        Padding="8,5"
                                        Margin="0,10,0,0"
                                        HorizontalAlignment="Left">
                                    <TextBlock Text="{Binding CurrentStatus}"
                                               Foreground="White"
                                               FontSize="12"/>
                                </Border>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
