<Page x:Class="ShelterApp.Views.Pages.FavoritesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource Beige}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Избранное"
                   Style="{StaticResource PageTitle}"
                   Grid.Row="0"/>

        <ScrollViewer Grid.Row="1"
                      Margin="0,20,0,0"
                      VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="FavoritesItemsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardBorder}"
                                Width="280"
                                Height="380"
                                Cursor="Hand"
                                MouseLeftButtonDown="AnimalCard_Click">
                            <StackPanel>
                                <Border Height="200"
                                        Background="{StaticResource DarkBeige}"
                                        CornerRadius="10"
                                        Margin="0,0,0,10">
                                    <TextBlock Text="Фото"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="{StaticResource TextDark}"
                                               FontSize="16"/>
                                </Border>

                                <TextBlock Text="{Binding Name}"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextDark}"
                                           Margin="0,0,0,5"/>

                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="Вид: " Foreground="{StaticResource TextDark}"/>
                                    <TextBlock Text="{Binding Type}" Foreground="{StaticResource TextDark}" FontWeight="Medium"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                    <TextBlock Text="Порода: " Foreground="{StaticResource TextDark}"/>
                                    <TextBlock Text="{Binding Breed}" Foreground="{StaticResource TextDark}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                    <TextBlock Text="Возраст: " Foreground="{StaticResource TextDark}"/>
                                    <TextBlock Text="{Binding Age}" Foreground="{StaticResource TextDark}"/>
                                    <TextBlock Text=" лет" Foreground="{StaticResource TextDark}"/>
                                </StackPanel>

                                <Border Background="{StaticResource LightGreen}"
                                        CornerRadius="10"
                                        Padding="8,5"
                                        Margin="0,10,0,0"
                                        HorizontalAlignment="Left">
                                    <TextBlock Text="{Binding CurrentStatus}"
                                               Foreground="White"
                                               FontSize="12"/>
                                </Border>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
