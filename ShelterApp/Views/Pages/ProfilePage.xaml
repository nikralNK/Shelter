<Page x:Class="ShelterApp.Views.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource Beige}">
    <Grid Margin="40">
        <StackPanel MaxWidth="600">
            <TextBlock Text="Личный кабинет"
                       Style="{StaticResource PageTitle}"/>

            <Border Style="{StaticResource CardBorder}">
                <StackPanel>
                    <TextBlock Text="Информация о пользователе"
                               Style="{StaticResource SectionTitle}"/>

                    <TextBlock Text="Имя пользователя:"
                               Margin="0,10,0,5"/>
                    <TextBox x:Name="UsernameTextBox"
                             Style="{StaticResource RoundedTextBox}"
                             Height="40"
                             IsReadOnly="True"/>

                    <TextBlock Text="ФИО:"
                               Margin="0,15,0,5"/>
                    <TextBox x:Name="FullNameTextBox"
                             Style="{StaticResource RoundedTextBox}"
                             Height="40"/>

                    <TextBlock Text="Email:"
                               Margin="0,15,0,5"/>
                    <TextBox x:Name="EmailTextBox"
                             Style="{StaticResource RoundedTextBox}"
                             Height="40"/>

                    <Button Content="Сохранить изменения"
                            Style="{StaticResource RoundedButton}"
                            Margin="0,20,0,0"
                            Height="45"
                            Click="SaveButton_Click"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource CardBorder}">
                <StackPanel>
                    <TextBlock Text="Мои заявки"
                               Style="{StaticResource SectionTitle}"/>

                    <ListBox x:Name="ApplicationsListBox"
                             Background="Transparent"
                             BorderThickness="0"
                             MaxHeight="300">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White"
                                        CornerRadius="10"
                                        Padding="15"
                                        Margin="0,5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding SubmissionDate, StringFormat='Дата: {0:dd.MM.yyyy}'}"
                                                   FontWeight="Medium"/>
                                        <TextBlock Text="{Binding ApplicationStatus}"
                                                   Margin="0,5,0,0"
                                                   Foreground="{StaticResource PrimaryGreen}"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
