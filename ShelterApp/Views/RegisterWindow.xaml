<Window x:Class="ShelterApp.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="550" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource Beige}">
    <Grid>
        <Border Style="{StaticResource CardBorder}"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Width="350">
            <StackPanel>
                <TextBlock Text="Регистрация"
                           Style="{StaticResource PageTitle}"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Имя пользователя:"
                           Margin="0,10,0,5"
                           Foreground="{StaticResource TextDark}"/>
                <TextBox x:Name="UsernameTextBox"
                         Style="{StaticResource RoundedTextBox}"
                         Height="40"/>

                <TextBlock Text="Email:"
                           Margin="0,10,0,5"
                           Foreground="{StaticResource TextDark}"/>
                <TextBox x:Name="EmailTextBox"
                         Style="{StaticResource RoundedTextBox}"
                         Height="40"/>

                <TextBlock Text="ФИО:"
                           Margin="0,10,0,5"
                           Foreground="{StaticResource TextDark}"/>
                <TextBox x:Name="FullNameTextBox"
                         Style="{StaticResource RoundedTextBox}"
                         Height="40"/>

                <TextBlock Text="Пароль:"
                           Margin="0,10,0,5"
                           Foreground="{StaticResource TextDark}"/>
                <PasswordBox x:Name="PasswordBox"
                             Style="{StaticResource RoundedPasswordBox}"
                             Height="40"/>

                <TextBlock Text="Подтверждение пароля:"
                           Margin="0,10,0,5"
                           Foreground="{StaticResource TextDark}"/>
                <PasswordBox x:Name="ConfirmPasswordBox"
                             Style="{StaticResource RoundedPasswordBox}"
                             Height="40"/>

                <TextBlock x:Name="ErrorTextBlock"
                           Margin="0,10,0,0"
                           Foreground="Red"
                           HorizontalAlignment="Center"
                           Visibility="Collapsed"/>

                <Button Content="Зарегистрироваться"
                        Style="{StaticResource RoundedButton}"
                        Margin="0,20,0,0"
                        Height="45"
                        Click="RegisterButton_Click"/>

                <Button Content="Отмена"
                        Style="{StaticResource RoundedButton}"
                        Background="{StaticResource DarkBeige}"
                        Foreground="{StaticResource TextDark}"
                        Margin="0,10,0,0"
                        Height="40"
                        Click="CancelButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
