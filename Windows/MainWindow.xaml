<Window x:Class="ShelterApp.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Приют для животных"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundColor}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="White"
                BorderBrush="{StaticResource AccentColor}"
                BorderThickness="0,0,0,1"
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Приют для животных"
                           Style="{StaticResource TitleStyle}"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <Button Content="Каталог"
                            Style="{StaticResource ButtonStyle}"
                            Click="CatalogButton_Click"/>
                    <Button Content="Избранное"
                            Style="{StaticResource ButtonStyle}"
                            Click="FavoritesButton_Click"/>
                    <Button Content="Профиль"
                            Style="{StaticResource ButtonStyle}"
                            Click="ProfileButton_Click"/>
                    <Button x:Name="AdminButton"
                            Content="Администрирование"
                            Style="{StaticResource ButtonStyle}"
                            Click="AdminButton_Click"
                            Visibility="Collapsed"/>
                </StackPanel>

                <Button Grid.Column="2"
                        Content="Выход"
                        Style="{StaticResource ButtonStyle}"
                        Background="#D9534F"
                        Click="LogoutButton_Click"/>
            </Grid>
        </Border>

        <Frame Grid.Row="1"
               x:Name="MainFrame"
               NavigationUIVisibility="Hidden"
               ContentRendered="MainFrame_ContentRendered"/>
    </Grid>
</Window>
